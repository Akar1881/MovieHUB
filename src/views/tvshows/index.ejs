<%- include('../partials/header') %>

<div class="container">
    <h1>TV Shows</h1>
    <div class="content-grid">
        <% tvshows.forEach(tvshow => { %>
            <div class="content-card">
                <a href="/tvshows/<%= tvshow.id %>">
                    <img src="<%= tvshow.poster %>" alt="<%= tvshow.title %>">
                    <div class="content-info">
                        <h3><%= tvshow.title %></h3>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>